<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?scenebuilder-stylesheet /css/Style.css?>

<?import java.net.URL?>
<?import javafx.scene.control.Slider?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@/css/Style.css"></URL> </stylesheets>

    <Slider onMouseDragged="#setTransparent" fx:id="slider" min="0.3f" max="1f"
            value="1f"/>

    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"></TextArea>
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" HBox.hgrow="ALWAYS" promptText="Введите сообщение..."/>
        <Button onAction="#sendMsg" fx:id="btn1" text="Send"/>
    </HBox>

</VBox>
